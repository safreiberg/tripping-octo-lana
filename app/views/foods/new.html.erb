<h2>new food item</h2>
<%= simple_form_for(@food, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, :autofocus => true, :required => true %> 
  <%= f.input :calories, :required => true %> 
  <%= f.input :carbs %>
  <%= f.input :protein %>
  <%= f.input :fat %>
  <%= f.input :location %>
  <%= f.input :time, :required => true %>
  <%= f.button :submit, 'submit', :class => 'btn-primary' %>
<% end %>