<h2>Dashboard for <%= current_user.name %></h2>
<h3><%= @day.strftime('%A, %b %d') %></h3>
<div class="span8">
<table class="table table-condensed">
  <caption><b>Feelings</b></caption>
	  <thead>
      <tr>
          <th>Target Type</th>
          <th>Value</th>
          <th>Time</th>
          <th>Location</th>
          <th></th>
     </tr>
  </thead>   
  <tbody>
    <% @feelings.each do |feeling| %>
    <tr>
      <td><%= link_to feeling.target_type, edit_feeling_path(feeling), :class => 'action' %></td>
      <td><%= feeling.value %></td>
      <td><%= feeling.time.strftime('%I:%M %p, %a') %></td>
      <td><%= feeling.location%></td>
      <td><%= link_to "delete", feeling, :method => :delete, :class => 'action'%>
    </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "new feeling", new_feeling_path, method: :get, :class => 'btn'%> 
<br />


<table class="table table-condensed">
  <caption><b>Foods</b></caption>
	  <thead>
      <tr>
          <th>Name</th>
          <th>Calories</th>
          <th>Time</th>
          <th></th>
      </tr>
  </thead>   
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= link_to food.name, edit_food_path(food), :class => 'action' %></td>
      <td><%= food.calories %></td>
      <td><%= food.time.strftime('%I:%M %p, %a') %></td>
      <td><%= link_to "delete", food, :method => :delete, :class => 'action' %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "new food", new_food_path, method: :get, :class => 'btn'%> 
<br />




