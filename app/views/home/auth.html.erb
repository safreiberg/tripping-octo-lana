<table class="table table-condensed">
  <caption><b>Sleeps</b></caption>
	  <thead>
      <tr>
          <th>Start</th>
          <th>End</th>
          <th>Length</th>
          <th>Location</th>
          <th>Quality</th>
          <th></th>
      </tr>
  </thead>   
  <tbody>
    <% @sleeps.each do |sleep| %>
    <tr>
      <td><%= link_to sleep.starttime.strftime('%I:%M %p, %a'), edit_sleep_path(sleep), :class => 'action' %></td>
      <td><%= sleep.endtime.strftime('%I:%M %p, %a') %></td>
      <td><%= (sleep.endtime - sleep.starttime)/3600 %></td>
      <td><%= sleep.location %></td>
      <td><%= sleep.quality %></td>
      <td><%= link_to "delete", sleep, :method => :delete, :class => 'action'%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "new sleep", new_sleep_path, method: :get, :class => 'btn'%> 
